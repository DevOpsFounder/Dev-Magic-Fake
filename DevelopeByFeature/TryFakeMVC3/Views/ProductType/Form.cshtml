@model M.Radwan.Domain.Entities.ProductTypeForm
@using M.Radwan.Domain.Entities           



@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ProductTypeForm</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.VendorForm)
        </div>
        <div class="editor-field">
            @{var vendorDropList = ((List<VendorForm>)ViewData["VendorDropList"]);}
            @Html.DropDownListFor(m => m.VendorForm.Id, new SelectList(@vendorDropList, "Id", "Name"), "Select Vendor")
            @Html.ValidationMessageFor(model => model.VendorForm)
            
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code)
            @Html.ValidationMessageFor(model => model.Code)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
