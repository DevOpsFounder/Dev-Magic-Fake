@model M.Radwan.Domain.Entities.ServiceForm
@using M.Radwan.Domain.Entities


 <link rel="Stylesheet" href="@Href("~/Content/Radwan.css")" type="text/css"/>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ServiceForm</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.VendorForm)
        </div>
        <div class="editor-field">
            @{var vendorDropList = ((List<VendorForm>)ViewData["VendorDropList"]);}
            @Html.DropDownListFor(m => m.VendorForm.Id, new SelectList(@vendorDropList, "Id", "Name"), "Select Vendor")
            @Html.ValidationMessageFor(model => model.VendorForm)
            <img id="smallLoader" class="noneDisplay" src="../../Content/themes/base/images/small-loader.gif" alt="Loading image"/>
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.ProductTypeForm)
        </div>
        <div class="editor-field">
            @{var productTypeDropList = ((List<ProductTypeForm>)ViewData["productTypeDropList"]);}
            @Html.DropDownListFor(m => m.ProductTypeForm.Id, new SelectList(@productTypeDropList, "Id", "Name"), "Select Product")
            @Html.ValidationMessageFor(model => model.ProductTypeForm)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code)
            @Html.ValidationMessageFor(model => model.Code)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FixedCommission)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FixedCommission)
            @Html.ValidationMessageFor(model => model.FixedCommission)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
 <script src="@Url.Content("~/Scripts/Radwan/Common.js")" type="text/javascript"></script>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
